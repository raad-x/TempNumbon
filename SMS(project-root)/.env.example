# =============================================================================
# Ring4 SMS Bot - Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure with your actual values
# =============================================================================

# REQUIRED: Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# REQUIRED: SMSPool API Configuration  
SMSPOOL_API_KEY=your_smspool_api_key_here

# Database Protection (72 hours = 3 days)
DATABASE_BACKUP_INTERVAL=72
MAX_BACKUPS=10
ENABLE_DATABASE_PROTECTION=true

# Business Rules
MIN_DEPOSIT_AMOUNT=2.00
PROFIT_MARGIN_PERCENT=5.0
MIN_PRICE_USD=0.15
MAX_PRICE_USD=1.00

# API Settings
SMSPOOL_TIMEOUT=30
MAX_RETRIES=3
POLLING_INTERVAL=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ring4_bot.log