# =============================================================================
# Ring4 SMS Bot - Master Configuration
# =============================================================================
# This file controls ALL bot settings and behavior.
# Modify these values to customize the bot without touching code.
# Format: KEY=VALUE (no spaces around =)
# Comments start with # and are ignored
# =============================================================================

# =============================================================================
# CORE AUTHENTICATION & ACCESS
# =============================================================================
# Your Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Your SMSPool API key from smspool.net dashboard
SMSPOOL_API_KEY=your_smspool_api_key_here

# Admin user IDs (comma-separated, no spaces)
# Get your ID by messaging @userinfobot
ADMIN_IDS=123456789,987654321

# Crypto wallet address for deposits (Binance, USDT, etc)
BINANCE_WALLET=your_crypto_wallet_address_here

# =============================================================================
# SERVICES CONFIGURATION
# =============================================================================
# Enable/disable specific SMS services (true/false)
ENABLE_RING4=true
ENABLE_TELEGRAM=true
ENABLE_GOOGLE=true
ENABLE_WHATSAPP=true

# Service priorities (1=highest priority, 4=lowest)
# Lower numbers are tried first
RING4_PRIORITY=1
TELEGRAM_PRIORITY=2
GOOGLE_PRIORITY=3
WHATSAPP_PRIORITY=4

# Service IDs (SMSPool service identifiers)
RING4_SERVICE_ID=1574
TELEGRAM_SERVICE_ID=22
GOOGLE_SERVICE_ID=395
WHATSAPP_SERVICE_ID=1012

# Service display names (shown to users)
RING4_DISPLAY_NAME=Ring4
TELEGRAM_DISPLAY_NAME=Telegram
GOOGLE_DISPLAY_NAME=Google/Gmail
WHATSAPP_DISPLAY_NAME=WhatsApp

# Service descriptions (shown in service menu)
RING4_DESCRIPTION=Ring4 US numbers (recommended)
TELEGRAM_DESCRIPTION=Telegram US numbers
GOOGLE_DESCRIPTION=Google/Gmail US numbers
WHATSAPP_DESCRIPTION=WhatsApp US numbers

# =============================================================================
# PRICING & PROFIT CONFIGURATION
# =============================================================================
# Global profit margin percentage (added to API cost)
PROFIT_MARGIN_PERCENT=5.0

# Minimum selling price (USD)
MIN_PRICE_USD=0.15

# Maximum selling price (USD)
MAX_PRICE_USD=1.00

# Per-service profit margins (override global margin)
# Leave empty to use global margin
RING4_PROFIT_MARGIN=
TELEGRAM_PROFIT_MARGIN=
GOOGLE_PROFIT_MARGIN=
WHATSAPP_PROFIT_MARGIN=

# Fixed pricing mode (ignore API prices, use fixed amounts)
USE_FIXED_PRICING=false
RING4_FIXED_PRICE=0.17
TELEGRAM_FIXED_PRICE=0.25
GOOGLE_FIXED_PRICE=0.42
WHATSAPP_FIXED_PRICE=0.35

# =============================================================================
# WALLET SYSTEM CONFIGURATION
# =============================================================================
# Minimum deposit amount (USD)
MIN_DEPOSIT_USD=5.00

# Maximum deposit amount (USD)
MAX_DEPOSIT_USD=1000.00

# Auto-approve deposits below this amount (0=disabled)
AUTO_APPROVE_BELOW_USD=0.00

# Enable wallet system (true/false)
ENABLE_WALLET_SYSTEM=true

# =============================================================================
# OTP POLLING CONFIGURATION
# =============================================================================
# Base polling interval (seconds)
POLL_INTERVAL=2

# Total polling timeout (seconds)
POLL_TIMEOUT=600

# Order expiration time (seconds)
ORDER_EXPIRES_IN=600

# Adaptive polling intervals (seconds)
POLLING_INITIAL_INTERVAL=2
POLLING_ACTIVE_INTERVAL=3
POLLING_STANDARD_INTERVAL=5
POLLING_EXTENDED_INTERVAL=10

# Maximum consecutive failures before slowing down
MAX_CONSECUTIVE_FAILURES=3

# API timeout per request (seconds)
API_TIMEOUT_SECONDS=10

# Maximum polling interval (seconds)
MAX_POLLING_INTERVAL=30

# =============================================================================
# USER INTERFACE CONFIGURATION
# =============================================================================
# Bot welcome message title
BOT_TITLE=Ring4 SMS Verification Bot

# Bot welcome message subtitle
BOT_SUBTITLE=US Phone Numbers for Verification

# Minimum balance warning threshold (USD)
LOW_BALANCE_WARNING=0.15

# Show pricing in service menu (true/false)
SHOW_PRICING_IN_MENU=true

# Show profit margins to admins (true/false)
SHOW_PROFIT_TO_ADMINS=true

# Default country for services
DEFAULT_COUNTRY_ID=1

# Default country name
DEFAULT_COUNTRY_NAME=United States

# =============================================================================
# OPERATION & BUSINESS RULES
# =============================================================================
# Auto-refund timeout orders (true/false)
AUTO_REFUND_TIMEOUT=true

# Auto-refund error orders (true/false)
AUTO_REFUND_ERRORS=true

# Maximum orders per user per day (0=unlimited)
MAX_ORDERS_PER_USER_PER_DAY=10

# Maximum orders per user per hour (0=unlimited)
MAX_ORDERS_PER_USER_PER_HOUR=3

# Enable service health monitoring (true/false)
ENABLE_SERVICE_MONITORING=true

# Service health check interval (seconds)
SERVICE_CHECK_INTERVAL=300

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Notify admins of new orders (true/false)
NOTIFY_ADMINS_NEW_ORDERS=false

# Notify admins of failed orders (true/false)
NOTIFY_ADMINS_FAILED_ORDERS=true

# Notify admins of deposit requests (true/false)
NOTIFY_ADMINS_DEPOSITS=true

# Notify admins of refund requests (true/false)
NOTIFY_ADMINS_REFUNDS=true

# Send daily revenue reports (true/false)
SEND_DAILY_REPORTS=true

# Daily report time (24-hour format: HH:MM)
DAILY_REPORT_TIME=09:00

# =============================================================================
# TECHNICAL CONFIGURATION
# =============================================================================
# Environment mode (production/development)
ENVIRONMENT=production

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Database file path
DATABASE_PATH=data/ring4_database.json

# Enable mock mode for testing (true/false)
ALLOW_MOCK=false

# Database backup interval (hours)
DATABASE_BACKUP_INTERVAL=24

# Maximum log file size (MB)
MAX_LOG_FILE_SIZE=100

# Number of log files to keep
LOG_FILES_TO_KEEP=7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting per user (requests per minute)
RATE_LIMIT_PER_MINUTE=10

# Block suspicious users automatically (true/false)
AUTO_BLOCK_SUSPICIOUS=false

# Require user verification for large deposits (true/false)
REQUIRE_VERIFICATION_FOR_LARGE_DEPOSITS=true

# Large deposit threshold (USD)
LARGE_DEPOSIT_THRESHOLD=100.00

# Enable IP logging (true/false)
ENABLE_IP_LOGGING=false

# =============================================================================
# MAINTENANCE & MONITORING
# =============================================================================
# Enable maintenance mode (true/false)
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE=Bot is currently under maintenance. Please try again later.

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# Performance alert threshold (response time in seconds)
PERFORMANCE_ALERT_THRESHOLD=5.0

# Enable database optimization (true/false)
AUTO_OPTIMIZE_DATABASE=true

# Database optimization interval (hours)
DATABASE_OPTIMIZATION_INTERVAL=168

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable beta testing mode (true/false)
ENABLE_BETA_MODE=false

# Enable detailed analytics (true/false)
ENABLE_DETAILED_ANALYTICS=true

# Enable user feedback system (true/false)
ENABLE_USER_FEEDBACK=false

# Enable referral system (true/false)
ENABLE_REFERRAL_SYSTEM=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom service priority algorithm (weighted/round_robin/price_based)
SERVICE_SELECTION_ALGORITHM=weighted

# Enable dynamic pricing based on demand (true/false)
ENABLE_DYNAMIC_PRICING=false

# Dynamic pricing adjustment factor (percentage)
DYNAMIC_PRICING_FACTOR=10.0

# Enable bulk purchase discounts (true/false)
ENABLE_BULK_DISCOUNTS=false

# Bulk discount threshold (number of purchases)
BULK_DISCOUNT_THRESHOLD=5

# Bulk discount percentage
BULK_DISCOUNT_PERCENTAGE=10.0

# =============================================================================
# REGIONAL CONFIGURATION
# =============================================================================
# Default timezone
DEFAULT_TIMEZONE=UTC

# Currency symbol
CURRENCY_SYMBOL=$

# Date format (for reports and logs)
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Enable multi-language support (true/false)
ENABLE_MULTI_LANGUAGE=false

# Default language
DEFAULT_LANGUAGE=en

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Enable webhook mode instead of polling (true/false)
ENABLE_WEBHOOK_MODE=false

# Webhook URL (if webhook mode enabled)
WEBHOOK_URL=

# Webhook secret token
WEBHOOK_SECRET=

# Enable external API integrations (true/false)
ENABLE_EXTERNAL_APIS=false

# External service URLs
EXTERNAL_BALANCE_CHECK_URL=
EXTERNAL_NOTIFICATION_URL=

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
# Save this file and restart the bot to apply changes.
# Invalid values will use defaults and log warnings.
# Check logs/ring4_bot.log for configuration validation results.
# =============================================================================
